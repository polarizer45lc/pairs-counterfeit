.registrations
  .registrations_box
    .logo_box
      = image_tag('pairs_logo.png', class: "pairs", width: "220px")
      %span.ttitle
        へようこそ
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .content_left
          = f.label :プロフィール写真
          = f.file_field :avatar
          = image_tag('prof-picture.png', class: "prof-picture", width: "100px")

        .content_right
          .sex_box
            .nickname_field
              = f.label :ニックネーム
              %br/
              = f.text_field :nickname, placeholder: "ニックネーム", autofcus: true, maxlength: "15"
            .sex_field
              = f.label :性別
              %br/
              = f.radio_button :sex, value= "0"
              男
              = f.radio_button :sex, value= "1"
              女
          .email_field
            = f.label :メールアドレス
            %br/
            = f.email_field :email, autocomplete: "email"
          .password_field
            = f.label :パスワード打っちゃおうか
            %br/
            = f.password_field :password
          .password_field
            = f.label :パスワード2回目行っちゃおうか
            %br/
            = f.password_field :password_confirmation
          .birthday_field
            = f.label :生年月日
            %br/
            = f.date_select(                    |
              :birthday,                        |
              start_year: 1980,                 |
              end_year:  (Time.now.year - 18),  |
              default:  Date.new(1994, 01, 01)) |
          .country_field
            = f.label :居住地
            %br/
            = f.select :residence_id, [['日本', 0], ['海外', 1]]
            = f.select :residence_id,options_from_collection_for_select(Region.all, :id, :name)
          - if devise_mapping.rememberable?
            .field
              / = f.check_box :sex
              / = f.label :私は18歳以上で独身です。Pairsの利用規約、プライバシーポリシーに同意します。
          .actions
            = f.submit "Pairsを始める", class: "submit"

        / = render "devise/shared/links"
