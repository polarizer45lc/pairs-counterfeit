%li.list_view_user_item
  .list_view_user_avatar
    -if user.avatar.present?
      = link_to image_tag(user.avatar,class: "user_photo"), user_path(user), remote: true
    -else
      = link_to image_tag(current_user.default_other_avatar,class: "user_photo"), user_path(user), remote: true
  .box_user_info
    .box_user_info01
      %p.user_summary
        %span.user_login
        %span.user_area{ limit_length: '5' }
          = user.residence.name
        %span.user_age #{age(user[:birthday])}歳
    .box_user_info02
      %p.user_chemistry 0%
      %p.user_like_count
        %span
          %em ？
      .user_tweet{ limit_length: "22" }
        .user_tweet_body
          = user.tweet
    .box_button_like
      #like_button_zone
        -if current_user.following?(user)
          = link_to "いいね済", "#", class: "btn_like btn_mitene btn_orange_a btn_d"
        - elsif user.following?(current_user)
          = form_for(current_user.active_relationships.build) do |f|
            %div= hidden_field_tag :followed_id, user.id
            = f.submit "いいね！ありがとう", class: "btn_like"
        -else
          = form_for(current_user.active_relationships.build) do |f|
            %div= hidden_field_tag :followed_id, user.id
            = f.submit "いいね！", class: "btn_like btn_like_default btn_d btn_pink_c no_border btn_like01 "
