.main__content
  = link_to '#', class: "banner" do
    = image_tag('banner.png', width: "721px")
  .box__search
    .search__area
      = link_to "検索条件", '#', class: "btn__white btn__b btn-modal"
    %nav.search__view
      %ul
        %li.tab__item.tag01.btn__white--active
          = link_to " ", '#', class: "filterTrigger"
        %li.tab__item.tag02.btn__white
          = link_to " ", '#'
    %p.search__result
      誰もいません
  .grid__header
    .header__text
      %span
        「いいね！」をあと
      %em
        30人
      %span
        押しましょう!
  .user__list
    %ul
      - @users.each do |user|
        = render partial: "shared/userlist", locals: { user: user }
  .box__paginate
    = paginate(@users)
  .box__remaining
    %p
      あと
      %em
        30人
      に「いいね！」ができます

  = render "shared/footer"
