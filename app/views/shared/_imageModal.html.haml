#image_modal.modal.fade{"role": "dialog"}
  .modal-dialog.modal-lg{"role": "document"}
    #image_content.modal-content
      .box_search_form
        = image_tag("button_close.png", class: "modal-close modal_close", "data-dismiss": "modal")
        = form_for current_user ,html: {class: 'box_modal_inner_image'} do |f|
          %p.modal_image_edit
            メイン写真の編集

          .modal_image_edit_photo_status
            .edit_user_main_photo
              = image_tag(current_user.main_avatar, class: "modal_image_edit_photo", onclick:"$('#main_photo').click()")
              = f.file_field :avatar, class: "hidden", id: "main_photo", style:"display:none;"

          %p.modal_sub_image_edit
            サブ写真の追加・削除
          %ul.modal_photo_edit_list
            %li.modal_photo_edit_box

              = image_tag(image_preview1(current_user), class: "modal_sub_image_edit_photo", onClick:"$('#sub_image1').click()")
              = f.file_field :sub_image1, class: "hidden", id: "sub_image1", style:"display:none;"

            %li.modal_photo_edit_box
              = image_tag(image_preview2(current_user), class: "modal_sub_image_edit_photo", onClick:"$('#sub_image2').click()")
              = f.file_field :sub_image2, class: "hidden", id: "sub_image2", style:"display:none;"

            %li.modal_photo_edit_box
              = image_tag(image_preview3(current_user), class: "modal_sub_image_edit_photo", onClick:"$('#sub_image3').click()")
              = f.file_field :sub_image3, class: "hidden", id: "sub_image3", style:"display:none;"

            %li.modal_photo_edit_box
              = image_tag(image_preview4(current_user), class: "modal_sub_image_edit_photo", onClick:"$('#sub_image4').click()")
              = f.file_field :sub_image4, class: "hidden", id: "sub_image4", style:"display:none;"

          .modal_image_edit_image_button_area
            = f.submit "編集" , class: "button_edit_image"



